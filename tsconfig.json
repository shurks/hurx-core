{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "types": [
            "node"
        ],
        "module": "commonjs",
        "target": "es2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "sourceMap": true,
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/library/engine/env",
            "./src"
        ],
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "declarationMap": true,
        "preserveSymlinks": true,
        "jsx": "react",
        "jsxFactory": "JSX.createVNode",
        "jsxFragmentFactory": "JSX.createVNode"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.d.ts",
        "./src/**/*.d.tsx"
    ],
    "ts-node": {
        "files": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
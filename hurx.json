{
    "$schema": "./res/schemas/hurx.schema.json",
    "package": {
        "name": "@hurx/core",
        "version": "1.0.0",
        "built": false,
        "dependencies": {
            "@hurx/gitignore-deserializer": "^1.0.0"
        },
        "devDependencies": {
        },
        "env": {
            "npm": "production",
            "git": "default",
            "default": {
                "paths": {
                    "base": "",
                    "sources": "src",
                    "resources": "res",
                    "logs": "logs",
                    "output": {
                        "base": "dist",
                        "sources": "",
                        "resources": "res",
                        "logs": "logs"
                    }
                }
            },
            "development": {},
            "production": {
                "paths": {
                    "output": {
                        "base": "dist/production"
                    }
                }
            }
        },
        "apps": {
            "bin": {
                "hurx": {
                    "default": {
                        "npx": true,
                        "args": [
                            "--verbose"
                        ],
                        "paths": {
                            "base": "",
                            "sources": "src/bin/hurx",
                            "resources": "res/bin/hurx",
                            "logs": "logs/bin/hurx",
                            "output": {
                                "sources": "bin/hurx",
                                "resources": "res/bin/hurx",
                                "logs": "logs/bin/hurx"
                            }
                        },
                        "main": "index.ts#default.main"
                    },
                    "production": {
                        "args": ["--test"]
                    }
                },
                "textmate": {
                    "default": {
                        "paths": {
                            "base": "",
                            "sources": "src/bin/textmate",
                            "resources": "res/bin/textmate",
                            "output": {
                                "sources": "bin/textmate",
                                "resources": "res/bin/textmate",
                                "logs": "logs/bin/textmate"
                            }
                        },
                        "main": "index.ts#default.main"
                    }
                }
            }
        }
    }
}